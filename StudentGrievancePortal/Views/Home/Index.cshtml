@{
    ViewData["Title"] = "Home";
}

<!-- ===== HERO SECTION ===== -->
<section class="hero-section">
    <div class="container">
        <div class="card p-4 p-md-5">

            <div class="row align-items-center">
                <div class="col-md-8">
                    <h2 class="fw-bold text-primary mb-3">
                        BVICAM Grievance Redressal System
                    </h2>

                    <p class="fs-5 text-muted">
                        A transparent, secure, and ERP-integrated platform for BVICAM students
                        to submit grievances and track resolutions efficiently.
                    </p>

                    <a asp-controller="Account"
                       asp-action="Login"
                       class="btn btn-primary btn-lg px-4 mt-2">
                        <i class="bi bi-box-arrow-in-right"></i> Login to ERP Portal
                    </a>
                </div>

                <div class="col-md-4 text-center d-none d-md-block">
                    <i class="bi bi-shield-check text-primary"
                       style="font-size: 6rem;"></i>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- ===== FEATURES SECTION ===== -->
<section class="container py-5">
    <div class="row g-4">

        <div class="col-md-4">
            <div class="card h-100 text-center p-4">
                <div class="feature-icon">
                    <i class="bi bi-incognito"></i>
                </div>
                <h5 class="fw-bold">100% Anonymous</h5>
                <p class="text-muted">
                    Student identity is protected. Grievances are forwarded
                    without revealing personal details.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 text-center p-4">
                <div class="feature-icon text-success">
                    <i class="bi bi-geo-alt"></i>
                </div>
                <h5 class="fw-bold">Real-time Tracking</h5>
                <p class="text-muted">
                    Monitor grievance status from submission
                    to resolution with live updates.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 text-center p-4">
                <div class="feature-icon text-info">
                    <i class="bi bi-diagram-3"></i>
                </div>
                <h5 class="fw-bold">ERP Integrated</h5>
                <p class="text-muted">
                    Fully integrated with the BVICAM ERP
                    for secure authentication and role-based access.
                </p>
            </div>
        </div>

    </div>
</section>

<!-- ===== HIGHLIGHT STRIP ===== -->
<section class="container mb-5">
    <div class="card bg-dark text-white p-4">
        <div class="row text-center">

            <div class="col-md-4 border-end border-secondary">
                <h3 class="fw-bold mb-0">24 × 7</h3>
                <small class="text-secondary">System Availability</small>
            </div>

            <div class="col-md-4 border-end border-secondary">
                <h3 class="fw-bold mb-0">Transparent</h3>
                <small class="text-secondary">Status Monitoring</small>
            </div>

            <div class="col-md-4">
                <h3 class="fw-bold mb-0">Confidential</h3>
                <small class="text-secondary">Student Identity Protection</small>
            </div>

        </div>
    </div>
</section>
