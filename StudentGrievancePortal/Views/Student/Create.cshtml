@model StudentGrievancePortal.Models.Grievance

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4>Submit New Grievance</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Target Department</label>
                        <select asp-for="AssignedDeptId" class="form-select" asp-items="ViewBag.Departments" required>
                            <option value="">-- Select Department --</option>
                        </select>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Subject</label>
                        <input asp-for="Subject" class="form-control" placeholder="Brief title of the issue" required />
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="5" placeholder="Provide details here..." required></textarea>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Priority</label>
                        <select asp-for="Priority" class="form-select">
                            <option value="Low">Low</option>
                            <option value="Medium" selected>Medium</option>
                            <option value="High">High</option>
                        </select>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <button type="submit" class="btn btn-primary px-5">Submit Grievance</button>
                    </div>
                </form>
                <div style="height: 100px;"></div>
            </div>
        </div>
    </div>
</div>