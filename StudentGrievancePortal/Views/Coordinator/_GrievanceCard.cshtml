@model StudentGrievancePortal.Models.Grievance

@{
    var isHigh = Model.Priority == "High";
    var isMedium = Model.Priority == "Medium";
    var priorityColor = isHigh ? "danger" : (isMedium ? "warning" : "info");
    var borderClass = isHigh ? "border-danger" : (isMedium ? "border-warning" : "border-info");
    var statusClass = Model.Status == "Resolved" ? "bg-success" : "bg-warning text-dark";

    var hoursOld = (DateTime.Now - Model.CreatedAt).TotalHours;
    var isDelayed = Model.Status != "Resolved" && hoursOld > 48;
}

<div class="col-md-6 mb-4 grievance-card" data-priority="@Model.Priority">
    <div class="card shadow-sm border-start border-4 @borderClass h-100">
        <div class="card-header d-flex justify-content-between align-items-center bg-white border-bottom-0 pt-3">
            <span class="badge bg-dark ticket-label">Ticket: @Model.TicketNumber</span>

            <div class="d-flex align-items-center gap-2">
                @if (isDelayed)
                {
                    <span class="badge rounded-pill bg-danger pulsate-danger sla-warning-text" title="Over 48 hours pending">
                        <i class="bi bi-exclamation-triangle-fill"></i> DELAYED (@Math.Floor(hoursOld / 24)d)
                    </span>
                }

                <span class="badge bg-@priorityColor @(Model.Priority != "High" ? "text-dark" : "")">
                    <i class="bi bi-flag-fill"></i> @Model.Priority
                </span>
                <span class="badge @statusClass">@Model.Status</span>
            </div>
        </div>
        <div class="card-body">
            <h5 class="card-title fw-bold text-primary subject-label">@Model.Subject</h5>
            <p class="card-text text-dark">@Model.Description</p>

            <div class="mt-3">
                <small class="text-muted">
                    <i class="bi bi-calendar-event"></i> Submitted: @Model.CreatedAt.ToString("g")
                </small>
            </div>
            <hr />

            @if (Model.Status != "Resolved")
            {
                <form asp-action="Resolve" method="post" class="mt-2">
                    <input type="hidden" name="id" value="@Model.GrievanceId" />
                    <div class="form-group mb-2">
                        <label class="small fw-bold text-uppercase text-muted">Resolution Action:</label>
                        <textarea name="resolutionDetails" class="form-control form-control-sm" rows="2" placeholder="Describe the action taken..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm w-100 shadow-sm">
                        <i class="bi bi-check2-circle"></i> Mark as Resolved
                    </button>
                </form>
            }
            else
            {
                <div class="p-2 bg-light rounded border border-success">
                    <p class="small mb-0 text-success">
                        <strong><i class="bi bi-info-circle"></i> Resolved:</strong> @Model.ResolutionDetails
                    </p>
                </div>
            }
        </div>
    </div>
</div>