@model IEnumerable<StudentGrievancePortal.Models.Grievance>

@{
    ViewData["Title"] = "Coordinator Dashboard";

    var totalCount = Model.Count();
    var highCount = Model.Count(g => g.Priority == "High");
    var mediumCount = Model.Count(g => g.Priority == "Medium");
    var lowCount = Model.Count(g => g.Priority == "Low");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center border-bottom mb-4 pb-2">
        <div>
            <h2 class="text-secondary"><i class="bi bi-clipboard-check"></i> Coordinator Dashboard</h2>
            <p class="text-muted">Reviewing grievances for <strong>@Context.Session.GetString("UserName")</strong></p>
        </div>

        <div class="col-md-4">
            <div class="input-group shadow-sm">
                <label class="input-group-text bg-white" for="ccPriorityFilter"><i class="bi bi-filter"></i></label>
                <select id="ccPriorityFilter" class="form-select" onchange="filterDashboard()">
                    <option value="">All Priorities (@totalCount)</option>
                    <option value="High">High Priority (@highCount)</option>
                    <option value="Medium">Medium Priority (@mediumCount)</option>
                    <option value="Low">Low Priority (@lowCount)</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row" id="grievanceGrid">
        @foreach (var item in Model)
        {
            var isHigh = item.Priority == "High";
            var isMedium = item.Priority == "Medium";

            var priorityColor = isHigh ? "danger" : (isMedium ? "warning" : "info");

            var borderClass = isHigh ? "border-danger" : (isMedium ? "border-warning" : "border-info");

            var statusClass = item.Status == "Resolved" ? "bg-success" : "bg-warning text-dark";

            <div class="col-md-6 mb-4 grievance-card" data-priority="@item.Priority">
                <div class="card shadow-sm border-start border-4 @borderClass h-100">
                    <div class="card-header d-flex justify-content-between align-items-center bg-white border-bottom-0 pt-3">
                        <span class="badge bg-dark">Ticket: @item.TicketNumber</span>
                        <div class="d-flex gap-2">
                            <span class="badge bg-@priorityColor @(item.Priority != "High" ? "text-dark" : "")">
                                <i class="bi bi-flag-fill"></i> @item.Priority
                            </span>
                            <span class="badge @statusClass">@item.Status</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-primary">@item.Subject</h5>
                        <p class="card-text text-dark">@item.Description</p>

                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="bi bi-calendar-event"></i> Submitted: @item.CreatedAt.ToString("g")
                            </small>
                        </div>
                        <hr />

                        @if (item.Status != "Resolved")
                        {
                            <form asp-action="Resolve" method="post" class="mt-2">
                                <input type="hidden" name="id" value="@item.GrievanceId" />
                                <div class="form-group mb-2">
                                    <label class="small fw-bold text-uppercase text-muted">Resolution Action:</label>
                                    <textarea name="resolutionDetails" class="form-control form-control-sm" rows="2" placeholder="Describe the action taken..." required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary btn-sm w-100 shadow-sm">
                                    <i class="bi bi-check2-circle"></i> Mark as Resolved
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="p-2 bg-light rounded border border-success">
                                <p class="small mb-0 text-success">
                                    <strong><i class="bi bi-info-circle"></i> Resolved:</strong> @item.ResolutionDetails
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <div id="ccNoResults" class="text-center mt-5 @(Model.Any() ? "d-none" : "")">
        <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
        <p class="text-muted mt-2">No matching grievances found.</p>
    </div>
</div>

@section Scripts {
    <script>
        function filterDashboard() {
            const filterValue = document.getElementById('ccPriorityFilter').value;
            const cards = document.getElementsByClassName('grievance-card');
            let visibleCount = 0;

            for (let i = 0; i < cards.length; i++) {
                const cardPriority = cards[i].getAttribute('data-priority');

                if (filterValue === "" || cardPriority === filterValue) {
                    cards[i].style.display = "";
                    visibleCount++;
                } else {
                    cards[i].style.display = "none";
                }
            }

            const noResults = document.getElementById('ccNoResults');
            if(visibleCount > 0) {
                noResults.classList.add('d-none');
            } else {
                noResults.classList.remove('d-none');
            }
        }
    </script>
}