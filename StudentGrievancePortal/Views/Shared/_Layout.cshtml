@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - BVICAM Grievance ERP</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Custom Theme -->
    <link rel="stylesheet" href="~/css/bvicam-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

    <!-- ===== ERP TOP STRIP ===== -->
    <div class="erp-top-bar text-white small">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <span>
                <i class="bi bi-mortarboard-fill"></i>
                Bharati Vidyapeeth (Deemed University)
            </span>
            <span class="d-none d-md-inline">
                BVICAM | Student Grievance Redressal System
            </span>
        </div>
    </div>

    <!-- ===== INSTITUTE HEADER (LEFT LOGO) ===== -->
    <div class="bvicam-header py-3">
        <div class="container-fluid d-flex align-items-center">

            <!-- LEFT: LOGO -->
            <img src="~/images/bvicam-logo.png"
                 alt="BVICAM Logo"
                 class="bvicam-logo me-3" />

            <!-- RIGHT: INSTITUTE TEXT -->
            <div>
                <h5 class="fw-bold mb-0">
                    Bharati Vidyapeeth’s Institute of Computer Applications & Management
                </h5>
                <div class="text-muted small">
                    ERP Integrated Grievance Management Portal
                </div>
            </div>

        </div>
    </div>

    <!-- ===== NAVBAR ===== -->
    <nav class="navbar navbar-expand-lg navbar-dark bvicam-navbar shadow-sm">
        <div class="container-fluid">

            <a class="navbar-brand d-flex align-items-center fw-bold"
               asp-controller="Home" asp-action="Index">

                <img src="~/images/bvicam-logo.png"
                     alt="BVICAM Logo"
                     class="navbar-logo me-2" />

                <span class="d-none d-md-inline">
                    BVICAM GRIEVANCES
                </span>
            </a>


            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @{
                        var userId = HttpContextAccessor.HttpContext.Session.GetInt32("UserId");
                        var roleId = HttpContextAccessor.HttpContext.Session.GetInt32("UserRole");
                    }

                    @if (userId != null && roleId == 1)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Student" asp-action="Index">
                                <i class="bi bi-file-text"></i> My Grievances
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Student" asp-action="Create">
                                <i class="bi bi-plus-circle"></i> Submit Grievance
                            </a>
                        </li>
                    }

                    @if (userId != null && roleId == 2)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Coordinator" asp-action="Dashboard">
                                <i class="bi bi-clock-history"></i> Pending Cases
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="Admin" asp-action="Summary">
                                <i class="bi bi-bar-chart-line-fill"></i> Department Report
                            </a>
                        </li>
                    }
                </ul>

                <!-- ===== RIGHT SIDE ===== -->
                <ul class="navbar-nav ms-auto align-items-center">
                    @if (userId != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i>
                                @HttpContextAccessor.HttpContext.Session.GetString("UserName")
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-danger btn-sm px-4" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <!-- ===== CONTENT ===== -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- ===== FOOTER ===== -->
    <footer class="bvicam-footer">
        <div class="container text-center small">
            <div class="fw-semibold">
                © 2026 Bharati Vidyapeeth (Deemed University)
            </div>
            <div>
                BVICAM ERP – Student Grievance Management Module
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
