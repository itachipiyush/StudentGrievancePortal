@{
    ViewData["Title"] = "Institutional Summary";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark fw-bold mb-0">
            <i class="bi bi-graph-up-arrow text-primary"></i> BVICAM Summary Report
        </h2>
        <a asp-action="ExportToCSV" class="btn btn-outline-success shadow-sm">
            <i class="bi bi-file-earmark-spreadsheet"></i> Download CSV Report
        </a>
    </div>

    <div class="row mb-4 g-3">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1 small">Total Grievances</h6>
                            <h2 class="fw-bold mb-0">@ViewBag.Total</h2>
                        </div>
                        <i class="bi bi-files fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1 small">Resolved Issues</h6>
                            <h2 class="fw-bold mb-0">@ViewBag.Resolved</h2>
                        </div>
                        <i class="bi bi-check-circle-fill fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-warning text-dark">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1 small">Pending Action</h6>
                            <h2 class="fw-bold mb-0">@ViewBag.Pending</h2>
                        </div>
                        <i class="bi bi-clock-history fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-5">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 fw-bold text-primary">Resolution Analytics</h6>
                </div>
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <canvas id="statusChart" style="max-width: 250px; max-height: 250px;"></canvas>
                    <div class="mt-4 text-center small text-muted">
                        <i class="bi bi-info-circle"></i> Showing percentage of closure for your department.
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 fw-bold text-primary">Recent Grievances (Top 5)</h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr class="small text-uppercase text-muted">
                                    <th class="ps-3">Ticket</th>
                                    <th>Subject</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.Recent)
                                {
                                    <tr>
                                        <td class="ps-3 fw-bold">@item.TicketNumber</td>
                                        <td>@item.Subject</td>
                                        <td>
                                            @{
                                                var bClass = item.Status == "Resolved" ? "bg-success" : "bg-warning text-dark";
                                            }
                                            <span class="badge @bClass">@item.Status</span>
                                        </td>
                                    </tr>
                                }
                                @if (Enumerable.Count(ViewBag.Recent) == 0)
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-4 text-muted">No data available</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 text-center py-3">
                    <a asp-controller="Coordinator" asp-action="Dashboard" class="btn btn-link btn-sm text-decoration-none">View All Pending Tasks</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('statusChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Resolved', 'Pending'],
                datasets: [{
                    data: [@ViewBag.Resolved, @ViewBag.Pending],
                    backgroundColor: ['#198754', '#ffc107'],
                    hoverOffset: 4,
                    borderWidth: 0
                }]
            },
            options: {
                cutout: '70%',
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { padding: 20, usePointStyle: true }
                    }
                }
            }
        });
    </script>
}